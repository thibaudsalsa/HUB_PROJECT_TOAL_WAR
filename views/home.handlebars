{{#if user}}


<div style="color: black">
    
<!--Recherche de partie-->
<p id="wait" style="color: white; font-size: 50px; font-family: Bubblegum; width: 40%; padding-left: 30%; padding-top: 10%; display: none; z-index: 1; text-align: center;">Recherche de partie ...</p>



<!--Matchmaking-->
<div id="choose" style="font-family: Bubblegum; width: 40%; padding-left: 30%; z-index: 1; padding-top: 10%; text-align: center;">
    <p style="font-size: 50px; color: white;">Choisissez votre nation</p>
    <select id="choose_nation" onchange="nation_explain(this)">
    </select>
    <button onclick="try_connect()">
        Aller au combat
    </button>
    <br>
    <p style="color: white; font-size: 25px;" id="nation_explain">La Russie supprime tous les soldats, chars, avions et cartes dans le jeux. L'argent de tous les joueurs est aussi a 0. La Russie est affectee par sa competence.</p>
</div>





<!-- Victoire -->
<div id="victory" style="color: white; font-size: 50px; font-family: Bubblegum; width: 40%; padding-left: 30%; padding-top: 10%; display: none; z-index: 1; text-align: center;">
    <p id="winner"></p>
    <button onclick="replay()">Rejouer</button>
</div>




<!-- Gameplay -->
<div id="display_game" style="display: none">
    <div id="gameplay" style="background: white; width: 40%; position:absolute">
        <label for="information">Information</label>
        <p readonly id="information" style="color: red;"></p>
        <label >Votre ville: <p id="couleur_ville"></p></label>
        <p id="argent">Argent: 200</p>
        <p id="cité">Cité: 200pv</p>
        <p>Soldat: <span id="soldat">0</span> <button style="display: " class="buy_unit" onclick="order('buy', 'soldat', 1)">Acheter un soldat</button>prix d'un soldat: <span class="price_unit">5</span></p>
        <p>Char: <span id="char">0</span>  <button style="display: " class="buy_unit" onclick="order('buy', 'char', 1)">Acheter un char</button>prix d'un char: <span class="price_unit">5</span></p>
        <p>Avion: <span id="avion">0</span> <button  style="display: " class="buy_unit" onclick="order('buy', 'avion', 1)">Acheter un avion</button>prix d'un avion: <span class="price_unit">5</span></p>
        <div><p class="en_right">Attaquer à droite</p>
        <select id="attaque_right_nb">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>25</option>
            <option>50</option>
            <option>100</option>
            </select>
        <select id="attaque_right_unit">
            <option>soldat</option>
            <option>char</option>
            <option>avion</option>
        </select>
        <button onclick="attack('right')" class="en_right">Attaquer à droite</button></div>
        <div><p class="en_left">Attaquer à gauche</p>
        <select id="attaque_left_nb">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>25</option>
            <option>50</option>
            <option>100</option>
            </select>
        <select id="attaque_left_unit">
            <option>soldat</option>
            <option>char</option>
            <option>avion</option>
        </select>
        <button onclick="attack('left')" class="en_left">Attaquer à gauche</button></div>
        <div>
            <p>Cartes (max:3)</p>
            <div id="carte_display"></div>
            <p><button onclick="order('buy', 'carte', 1)" style="display: " id="buy_card">Acheter une carte</button>prix d'une carte: <span id="price_card">20</span></p>
            <p><button onclick="order('use', 'nation', 1)" id="nation_power" style="display: ">Utiliser le pouvoir de votre nation</button>Prix de la compétence de nation: <span id="price_nation">10</span></p>
        </div>
    </div>
    <canvas width="1000" height="750" id="art" style="padding-left: 40%"></canvas>
</div>
<audio id="sound" src="menu.ogg" autoplay loop></audio>
</div>


















<script src="js/co.js"></script>
<script src=js/nation.js></script>
<script src="isomer/dist/isomer.min.js"></script>
<script src="js/game_lib.js"></script>
<script src="js/game.js"></script>

{{else}}
{{/if}}